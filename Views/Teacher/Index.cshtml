@model IEnumerable<Teacher>

<h2 style="color: #425288; display: inline; margin-right: 100px"> Teacher List</h2>
<a href="/Teacher/Create" class="btn btn-sm btn-outline-warning">Create Teacher</a>
<hr/>
<div class="center-div">
    <table class="table table-border">
        <thead>
        <tr>
            <th style="width: 70px">@Html.DisplayNameFor(m => m.TeacherId)</th>
            <th style="width: 120px">@Html.DisplayNameFor(m => m.Name)</th>
            <th style="width: 150px">@Html.DisplayNameFor(m => m.LastName)</th>
            <th style="width: 150px">@Html.DisplayNameFor(m => m.StartDate)</th>

            <th style="width: 150px"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.TeacherId)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.LastName)</td>
                <td>@Html.DisplayFor(modelItem => item.StartDate)</td>
                
                <td><a href="/Teacher/Edit/@item.TeacherId" class="btn btn-sm btn-outline-warning">Edit</a>
                    <a href="/Teacher/Delete/@item.TeacherId"  class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
        
            </tr>
        }
        </tbody>
    </table>
</div>