@model Student

<h2 style="color: #425288">
    Update Student
</h2>
<hr/>
<form asp-controller="Student" asp-action="Edit" method="post">
    <input type="hidden" asp-for="StudentId"/>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"> Student Name</label>
        <input asp-for="Name" class="form-control border-input"/>
    </div>
    <div class="mb-3">
        <label asp-for="LastName" class="form-label"> Student Last Name</label>
        <input asp-for="LastName" class="form-control border-input"/>
    </div>
    <div class="mb-3">
        <label asp-for="Phone" class="form-label"> Student Phone</label>
        <input asp-for="Phone" class="form-control border-input"/>
    </div>
    <div class="mb-3">
        <label asp-for="Email" class="form-label"> Student Email</label>
        <input asp-for="Email" class="form-control border-input"/>
    </div>
    <button type="submit" class="btn btn-outline-warning"> Update </button>
</form>

