@model CourseViewModel

<h2>
    <b> Update Course</b>
</h2>
<hr/>

<div class="row">
    <div class="col-7">
        <form asp-controller="Course" asp-action="Edit" method="post">
            <input type="hidden" asp-for="CourseId"/>
            <div class="mb-3">
                <label asp-for="Title" class="form-label"> Course Title</label>
                <input asp-for="Title" class="form-control border-input"/>
            </div>
            <div class="mb-3">
                <label asp-for="Description" class="form-label"> Course Description</label>
                <input asp-for="Description" class="form-control border-input"/>
            </div>
            
             <div class="mb-3">
                        <label asp-for="TeacherId" class="form-label">Teacher</label>
                        <select asp-for="TeacherId" asp-items="ViewBag.Teachers" class="form-select border-input">
                            <option value=""> Select</option>
                        </select>
                    </div>
            <button class="btn btn-outline-warning" type="submit"> Update</button>

        </form>
    </div>
    <div class="col-5">
        <h5 >Students</h5>
        <hr/>
        <ul>
            @foreach (var item in @Model.CourseRegistration)
            {
                <li>@item.Student.FullName</li>
            }
        </ul>
    </div>
</div>